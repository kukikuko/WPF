<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:WpfExplorer.Main.UI.Views"
    xmlns:units="clr-namespace:WpfExplorer.Main.UI.Units">
    <Style TargetType="{x:Type views:MainContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainContent}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <units:FolderTreeView ItemsSource="{Binding Roots}"
                                                  SelectionCommand="{Binding FolderChangedCommand}"/>
                            <StackPanel Grid.Column="1">
                                <Button Content="Go up" Command="{Binding GotoParentCommand}"/>
                                <Button Content="Go back" Command="{Binding GoBackCommand}"/>
                                <Button Content="Go Forward" Command="{Binding GoForwardCommand}"/>
                            </StackPanel>
                            <DataGrid ItemsSource="{Binding Files}" Grid.Column="2"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>